.content
	font-family $benton, Arial, "Helvetica Neue", Helvetica, sans-serif
	& .title
		font-family $benton-bold, "Arial Black"
.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	&__hed
		max-width 70rem
		margin 0 auto
		padding-top 5rem
		font-weight 800
		text-align center
		font-family BentonSans-Bold $sans-fb !important
		line-height 1.5
		color #444

		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
		+mq('bp-5')
			set-type-size('xxxx-large', true)
	
	&__byline
		max-width $column-width
		margin 0 auto
		//padding-top 1rem
		padding-bottom 1.5rem
		text-align center
		set-type-size('small', true)
		& a
			//color white
			border-bottom 0px
			text-decoration underline
			&:hover
				color $fp_red
		
	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)