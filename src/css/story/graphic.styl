.graphic
  width 100%
  height 1100vh
  position relative
  .graphic_outer_container
    height 100vh
    padding-top 10vh
    padding-right 0
    .graphic_container
      height 90vh

  .graphic_scrolly
    position absolute
    top 0px
    left 0px

    .graphic_scrolly_content
      height 100vh
      max-width $graphic-content-width
      margin 1rem
      opacity 0.1
      &.active
        opacity 1
      .graphic_scrolly_content_p
        margin-top 40vh
        padding 1rem
        background-color $transparent-white
        .highlight
          background-color white
          padding 1px 5px
          border-radius 3px
          border 0.5px solid #aaa
          &:hover
            background-color $fp_blue
            color white
        .stress
          background-color gold

.sticky
  position sticky
  top 0px
  left 0px
